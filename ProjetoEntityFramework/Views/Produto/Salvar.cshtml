@model  ProjetoEntityFramework.Models.Produto

@{
    ViewData["Title"] = "Salvar";
}

<h2>Formulário de Produto</h2>

<form class="form-horizontal" asp-action="Salvar" asp-controller="Produto" method="post">

    <input type="hidden" class="form-control" asp-for="Id">
    <div class="form-group">
        <label class="col-md-1 control-label" for="Name">Nome:</label>
        <div class="col-md-2">
            <input type="text" class="form-control" asp-for="Nome">
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-1 control-label" for="Categoria">Categoria</label>
        <div class="col-md-2">
            <select class="form-control" asp-for="CategoriaId"
                    asp-items='@(new SelectList(@ViewBag.Categoria, "Id", "Nome"))'></select>
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-1 control-label" for="Ativo">Ativo</label>
        <div class="col-md-2">
            <input type="checkbox" asp-for="Ativo">
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-2">
            <button class="btn btn-success">Salvar</button>
        </div>
    </div>

</form>

